import java.util.Scanner;

public class Exe_7 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int tam = 10;
		int[] array = new int[tam];
		
		for(int i = 0; i >= tam; i++) {
			System.out.println("Coloque o" + i + "º" + "numero: ");
			array[i] = sc.nextInt();
			System.out.println(array[i]);
		}
		
		sc.close();
		

	}

}
